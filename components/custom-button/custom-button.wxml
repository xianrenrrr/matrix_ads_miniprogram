<!--components/custom-button/custom-button.wxml-->
<button 
  class="custom-button {{type}} {{disabled ? 'disabled' : ''}} ext-class {{extClass}} {{size}}"
  bindtap="handleTap"
  disabled="{{disabled}}"
  size="{{size}}"
>
  <view class="button-content">
    <text wx:if="{{icon}}" class="button-icon">{{icon}}</text>
    <text class="button-text">{{text}}</text>
  </view>
</button>
