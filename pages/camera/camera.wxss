/* pages/camera/camera.wxss */

.camera-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  overflow: hidden;
}

.camera-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 网格覆盖 */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.grid-line {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.3);
}

.grid-line-v1, .grid-line-v2 {
  width: 2rpx;
  height: 100%;
}

.grid-line-v1 { left: 33.33%; }
.grid-line-v2 { left: 66.67%; }

.grid-line-h1, .grid-line-h2 {
  height: 2rpx;
  width: 100%;
}

.grid-line-h1 { top: 33.33%; }
.grid-line-h2 { top: 66.67%; }

.scene-hints {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.grid-block {
  position: absolute;
  border: 4rpx solid #3b82f6;
  background-color: rgba(59, 130, 246, 0.2);
  border-radius: 8rpx;
}

.grid-block-1 { top: 0; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-2 { top: 0; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-3 { top: 0; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-4 { top: 33.33%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-5 { top: 33.33%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-6 { top: 33.33%; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-7 { top: 66.67%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-8 { top: 66.67%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-9 { top: 66.67%; left: 66.67%; width: 33.33%; height: 33.33%; }

/* 录制状态指示器 */
.recording-indicator {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background-color: rgba(239, 68, 68, 0.9);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.recording-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: white;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 场景信息 */
.scene-info {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 300rpx;
}

.scene-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.scene-time {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 顶部控制栏 */
.top-controls {
  position: absolute;
  top: 40rpx;
  right: 32rpx;
  display: flex;
  gap: 16rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.control-icon {
  font-size: 32rpx;
}

/* 脚本提示器 */
.script-teleprompter {
  position: absolute;
  top: 140rpx;
  left: 32rpx;
  right: 32rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 16rpx;
  padding: 24rpx;
  backdrop-filter: blur(10rpx);
  max-height: 160rpx;
  overflow-y: auto;
}

.script-content {
  color: white;
  line-height: 1.6;
}

.script-text {
  font-size: 32rpx;
}

/* 底部控制栏 */
.bottom-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 32rpx 60rpx;
}

/* 场景导航 */
.scene-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.nav-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.scene-progress {
  display: flex;
  gap: 12rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.progress-dot.active {
  background-color: #3b82f6;
  transform: scale(1.5);
}

.progress-dot.completed {
  background-color: #10b981;
}

/* 录制按钮 */
.record-controls {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.record-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid white;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.record-btn:active {
  transform: scale(0.95);
}

.record-btn.record-btn-start {
  background-color: #ef4444;
}

.record-btn.record-btn-stop {
  background-color: #f59e0b;
}

.record-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 50%;
}

.stop-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: white;
  border-radius: 4rpx;
}

/* 完成按钮 */
.finish-controls {
  display: flex;
  justify-content: center;
}

.finish-btn {
  background-color: #10b981;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 模板选择提示 */
.template-prompt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.prompt-content {
  background-color: #1e293b;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin: 32rpx;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-bottom: 16rpx;
}

.prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #94a3b8;
  margin-bottom: 32rpx;
}

.prompt-btn {
  background-color: #3b82f6;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}