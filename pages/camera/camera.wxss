/* pages/camera/camera.wxss */

.camera-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  overflow: hidden;
}

.camera-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 网格覆盖 */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.grid-line {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.3);
}

.grid-line-v1, .grid-line-v2 {
  width: 2rpx;
  height: 100%;
}

.grid-line-v1 { left: 33.33%; }
.grid-line-v2 { left: 66.67%; }

.grid-line-h1, .grid-line-h2 {
  height: 2rpx;
  width: 100%;
}

.grid-line-h1 { top: 33.33%; }
.grid-line-h2 { top: 66.67%; }

.scene-hints {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.grid-block {
  position: absolute;
  border: 4rpx solid #1f2937;
  background-color: rgba(31, 41, 55, 0.2);
  border-radius: 8rpx;
}

.grid-block-1 { top: 0; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-2 { top: 0; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-3 { top: 0; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-4 { top: 33.33%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-5 { top: 33.33%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-6 { top: 33.33%; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-7 { top: 66.67%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-8 { top: 66.67%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-9 { top: 66.67%; left: 66.67%; width: 33.33%; height: 33.33%; }

/* 录制状态指示器 */
.recording-indicator {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background-color: rgba(239, 68, 68, 0.9);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.recording-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: white;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 场景信息 */
.scene-info {
  position: absolute;
  bottom: 200rpx;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 300rpx;
}

.scene-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.scene-time {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 顶部控制栏 */
.top-controls {
  position: absolute;
  top: 200rpx;
  left: 32rpx;
  right: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.controls-right {
  display: flex;
  gap: 16rpx;
}

.control-btn {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
}

.control-icon {
  font-size: 32rpx;
  color: #fff;
}

/* 返回按钮特殊样式 */
.back-btn {
  background-color: rgba(0, 0, 0, 0.8);
}

.back-btn .control-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* 脚本侧边栏 */
.script-sidebar {
  position: absolute;
  top: 0;
  right: -300rpx;
  width: 300rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10rpx);
  transition: right 0.3s ease;
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.script-sidebar.show {
  right: 0;
}

.script-toggle {
  position: absolute;
  top: 50%;
  left: -40rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx 0 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.script-content {
  flex: 1;
  padding: 40rpx 24rpx;
  overflow-y: auto;
}

.script-text {
  color: white;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.script-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.script-detail {
  font-size: 24rpx;
  color: #94a3b8;
  padding: 12rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

/* 底部控制栏 */
.bottom-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 32rpx 60rpx;
}

/* 场景导航 */
.scene-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.nav-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.scene-progress {
  display: flex;
  gap: 12rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.progress-dot.active {
  background-color: #1f2937;
  transform: scale(1.5);
}

.progress-dot.completed {
  background-color: #10b981;
}

/* 录制按钮 */
.record-controls {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.record-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid white;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.record-btn:active {
  transform: scale(0.95);
}

.record-btn.record-btn-start {
  background-color: #ef4444;
}

.record-btn.record-btn-stop {
  background-color: #f59e0b;
}

.record-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 50%;
}

.stop-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: white;
  border-radius: 4rpx;
}

/* 完成按钮 */
.finish-controls {
  display: flex;
  justify-content: center;
}

.finish-btn {
  background-color: #10b981;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 模板选择提示 */
.template-prompt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.prompt-content {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
}

.prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.prompt-btn {
  background-color: #1f2937;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 脚本提示器样式 */
.script-teleprompter {
  cursor: pointer;
}

.script-hint {
  display: block;
  font-size: 20rpx;
  color: #94a3b8;
  text-align: center;
  margin-top: 8rpx;
}

/* 脚本模态框 */
.script-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.script-modal {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 90%;
  max-height: 70%;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.script-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.script-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.script-close {
  font-size: 48rpx;
  color: #6b7280;
  padding: 16rpx;
}

.script-body {
  max-height: 600rpx;
  padding: 32rpx;
}

.full-script-text {
  display: block;
  font-size: 32rpx;
  line-height: 1.6;
  color: #111827;
  margin-bottom: 32rpx;
}

.script-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.script-detail {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 12rpx;
}

/* 场景进度指示器 */
.scene-progress-indicator {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

/* 录制完成弹窗 */
.recording-complete-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-complete-modal {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.recording-complete-header {
  padding: 32rpx 32rpx 16rpx;
  text-align: center;
  border-bottom: 2rpx solid #e5e7eb;
}

.recording-complete-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.recording-complete-body {
  padding: 24rpx 32rpx;
  text-align: center;
}

.recording-complete-text {
  font-size: 28rpx;
  color: #6b7280;
}

.recording-complete-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
  justify-content: center;
}

.recording-action-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  max-width: 150rpx;
}

.recording-action-btn.retry-btn {
  background-color: #ef4444;
  color: white;
}

.recording-action-btn.continue-btn {
  background-color: #10b981;
  color: white;
}

.recording-action-btn.finish-btn {
  background-color: #1f2937;
  color: white;
}

/* 上传失败弹窗 */
.upload-failure-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-failure-modal {
  background-color: #ffffff;
  border-radius: 24rpx;
  width: 85%;
  max-width: 600rpx;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.upload-failure-header {
  padding: 32rpx 32rpx 16rpx;
  text-align: center;
  border-bottom: 2rpx solid #e5e7eb;
}

.upload-failure-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ef4444;
}

.upload-failure-body {
  padding: 24rpx 32rpx;
  text-align: center;
}

.upload-failure-text {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.upload-failure-detail {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  background-color: #f9fafb;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
  line-height: 1.3;
}

.upload-failure-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
  justify-content: center;
}

.upload-action-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  max-width: 150rpx;
}

.upload-action-btn.download-btn {
  background-color: #10b981;
  color: white;
}

.upload-action-btn.retry-btn {
  background-color: #1f2937;
  color: white;
}