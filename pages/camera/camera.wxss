/* pages/camera/camera.wxss */

.camera-container {
  position: relative;
  width: 100vw;
  height: 100vh;
  background-color: #000;
  overflow: hidden;
}

.preview-container {
  position: relative;
  width: 100%;
  height: 100%;
}

/* MVP: Overlay layer for objects */
.overlay-layer {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  pointer-events: none; /* IMPORTANT: no touch blocking */
}

#overlayCanvas {
  width: 100%;
  height: 100%;
}



.camera-preview {
  width: 100%;
  height: 100%;
  position: relative;
}

/* 网格覆盖 */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
}

.grid-line {
  position: absolute;
  background-color: rgba(255, 255, 255, 0.3);
}

.grid-line-v1, .grid-line-v2 {
  width: 2rpx;
  height: 100%;
}

.grid-line-v1 { left: 33.33%; }
.grid-line-v2 { left: 66.67%; }

.grid-line-h1, .grid-line-h2 {
  height: 2rpx;
  width: 100%;
}

.grid-line-h1 { top: 33.33%; }
.grid-line-h2 { top: 66.67%; }

.scene-hints {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.grid-block {
  position: absolute;
  border: 4rpx solid #1f2937;
  background-color: rgba(31, 41, 55, 0.2);
  border-radius: 8rpx;
}

.grid-block-1 { top: 0; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-2 { top: 0; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-3 { top: 0; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-4 { top: 33.33%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-5 { top: 33.33%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-6 { top: 33.33%; left: 66.67%; width: 33.33%; height: 33.33%; }
.grid-block-7 { top: 66.67%; left: 0; width: 33.33%; height: 33.33%; }
.grid-block-8 { top: 66.67%; left: 33.33%; width: 33.33%; height: 33.33%; }
.grid-block-9 { top: 66.67%; left: 66.67%; width: 33.33%; height: 33.33%; }

/* 多边形覆盖 */
.polygon-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none; /* 不阻塞触摸 */
  z-index: 1;
}

.overlay-canvas {
  width: 100%;
  height: 100%;
  pointer-events: none; /* Canvas 也不阻塞触摸 */
}


/* 录制状态指示器 */
.recording-indicator {
  position: absolute;
  top: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  background-color: rgba(239, 68, 68, 0.9);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 48rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.recording-dot {
  width: 16rpx;
  height: 16rpx;
  background-color: white;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

/* 录制时间显示 */
.recording-timer {
  text-align: center;
  margin-bottom: 32rpx;
  padding: 16rpx 24rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 24rpx;
  display: inline-block;
}

.timer-text {
  color: white;
  font-size: 28rpx;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.remaining-text {
  color: #fbbf24;
  font-size: 24rpx;
  font-weight: 500;
}

/* 场景信息 */
.scene-info {
  position: absolute;
  bottom: 240rpx; /* moved slightly higher to avoid overlap */
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.7);
  color: white;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
  text-align: center;
  min-width: 300rpx;
}

.scene-title {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.scene-time {
  font-size: 24rpx;
  color: #6b7280;
}

/* 顶部控制栏 */
.top-controls {
  position: absolute;
  top: 200rpx;
  left: 32rpx;
  display: flex;
  align-items: center;
}

/* 右侧控制栏 */
.right-controls {
  position: absolute;
  top: 200rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
  padding: 12rpx 8rpx;
  gap: 6rpx;
  z-index: 10;
  transition: right 0.3s ease;
}

.right-controls.shifted-left {
  right: 310rpx;
}

.control-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 12rpx 8rpx;
  min-width: 60rpx;
}

.right-controls .control-btn {
  width: 40rpx;
  height: 80rpx;
  background-color: transparent;
  border-radius: 0;
}

.top-controls .control-btn {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  padding: 0;
}

.control-icon {
  font-size: 28rpx;
  color: #fff;
  margin-bottom: 2rpx;
}

.control-label {
  font-size: 18rpx;
  color: #fff;
  text-align: center;
  line-height: 1.2;
}

.top-controls .control-icon {
  margin-bottom: 0;
}

/* 返回按钮特殊样式 */
.back-btn {
  background-color: rgba(0, 0, 0, 0.8);
}

.back-btn .control-icon {
  font-size: 36rpx;
  font-weight: bold;
}

/* KTV overlay styles */
.ktv-overlay {
  position: absolute;
  /* Keep above camera preview; avoid scene-info and bottom controls */
  bottom: 360rpx;
  left: 40rpx;
  right: 40rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 12rpx;
  padding: 16rpx 20rpx;
  z-index: 7;
  pointer-events: none; /* Do not block taps on buttons */
}
.ktv-text {
  font-size: 32rpx;
  line-height: 44rpx;
  color: #9ca3af; /* rest */
}
.ktv-highlight {
  color: #ffffff;
  font-weight: 600;
}
.ktv-rest {
  color: #9ca3af;
}

/* 指导侧边栏 */
.hints-sidebar {
  position: absolute;
  top: 0;
  right: -280rpx;
  width: 280rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10rpx);
  transition: right 0.3s ease;
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.hints-sidebar.show {
  right: 0;
}


.hints-content {
  flex: 1;
  padding: 200rpx 20rpx 40rpx 20rpx;
  overflow-y: auto;
}

.hints-section {
  margin-bottom: 32rpx;
}

.hints-title {
  display: block;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 8rpx;
}

.hints-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.hints-detail {
  display: block;
  color: #e5e7eb;
  font-size: 24rpx;
  padding: 8rpx 12rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 6rpx;
}

.hints-text {
  display: block;
  color: #e5e7eb;
  font-size: 24rpx;
  line-height: 1.5;
  padding: 12rpx;
  background-color: rgba(255, 255, 255, 0.08);
  border-radius: 8rpx;
  border-left: 3rpx solid #10b981;
}

/* 提词器侧边栏 */
.script-sidebar {
  position: absolute;
  top: 0;
  right: -300rpx;
  width: 300rpx;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.9);
  backdrop-filter: blur(10rpx);
  transition: right 0.3s ease;
  z-index: 100;
  display: flex;
  flex-direction: column;
}

.script-sidebar.show {
  right: 0;
}

.script-toggle {
  position: absolute;
  top: 50%;
  left: -40rpx;
  transform: translateY(-50%);
  width: 40rpx;
  height: 80rpx;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 20rpx 0 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 24rpx;
}

.script-content {
  flex: 1;
  padding: 40rpx 24rpx;
  overflow-y: auto;
}

.script-text {
  color: white;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.script-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.script-detail {
  font-size: 24rpx;
  color: #6b7280;
  padding: 12rpx;
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 8rpx;
}

/* Ensure sidebar uses dark-styled details even if other styles exist later */
.script-sidebar .script-text {
  color: #ffffff;
}
.script-sidebar .script-details { gap: 12rpx; }
.script-sidebar .script-detail {
  background-color: rgba(255, 255, 255, 0.1) !important;
  color: #e5e7eb !important;
  border: 1rpx solid rgba(255, 255, 255, 0.08);
}
.script-sidebar .script-detail .example-frame {
  max-height: 200rpx;
  object-fit: cover;
  border: 1rpx solid rgba(255, 255, 255, 0.1);
  background-color: transparent;
}

.example-frame {
  width: 100%;
  border-radius: 12rpx;
  margin-top: 8rpx;
}

/* 底部控制栏 */
.bottom-controls {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(transparent, rgba(0, 0, 0, 0.8));
  padding: 40rpx 32rpx 60rpx;
}

/* 场景导航 */
.scene-navigation {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 32rpx;
}

.nav-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 16rpx 24rpx;
  font-size: 28rpx;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.scene-progress {
  display: flex;
  gap: 12rpx;
}

.progress-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.progress-dot.active {
  background-color: #1f2937;
  transform: scale(1.5);
}

.progress-dot.completed {
  background-color: #10b981;
}

/* 录制按钮 */
.record-controls {
  display: flex;
  justify-content: center;
  margin-bottom: 24rpx;
}

.record-btn {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 8rpx solid white;
  background-color: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.record-btn:active {
  transform: scale(0.95);
}

.record-btn.record-btn-start {
  background-color: #ef4444;
}

.record-btn.record-btn-stop {
  background-color: #f59e0b;
}

.record-icon {
  width: 60rpx;
  height: 60rpx;
  background-color: white;
  border-radius: 50%;
}

.stop-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: white;
  border-radius: 4rpx;
}

/* 完成按钮 */
.finish-controls {
  display: flex;
  justify-content: center;
}

.finish-btn {
  background-color: #10b981;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 模板选择提示 */
.template-prompt {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}

.prompt-content {
  background-color: #f5f5f5;
  border-radius: 24rpx;
  padding: 48rpx;
  text-align: center;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.prompt-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
}

.prompt-desc {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 32rpx;
}

.prompt-btn {
  background-color: #1f2937;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 24rpx 48rpx;
  font-size: 32rpx;
  font-weight: 500;
}

/* 提词器提示器样式 */
.script-teleprompter {
  cursor: pointer;
}

.script-hint {
  display: block;
  font-size: 20rpx;
  color: #6b7280;
  text-align: center;
  margin-top: 8rpx;
}

/* 提词器模态框 */
.script-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.script-modal {
  background-color: #f5f5f5;
  border-radius: 24rpx;
  width: 90%;
  max-height: 70%;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.script-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #e5e7eb;
}

.script-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
}

.script-close {
  font-size: 48rpx;
  color: #6b7280;
  padding: 16rpx;
}

.script-body {
  max-height: 600rpx;
  padding: 32rpx;
}

.full-script-text {
  display: block;
  font-size: 32rpx;
  line-height: 1.6;
  color: #111827;
  margin-bottom: 32rpx;
}

.script-details {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.script-detail {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  padding: 16rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
}

/* 场景进度指示器 */
.scene-progress-indicator {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 32rpx;
}

/* 录制完成弹窗 */
.recording-complete-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.recording-complete-modal {
  background-color: #f5f5f5;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  overflow: hidden;
  margin: auto;
  position: relative;
}

.recording-complete-header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #e0e0e0;
  background-color: #f5f5f5;
}

.recording-complete-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.recording-complete-body {
  padding: 40rpx;
  text-align: center;
  line-height: 1.6;
}

.recording-complete-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.recording-complete-duration {
  font-size: 28rpx;
  color: #666;
  display: block;
}

.recording-complete-actions {
  display: flex;
  gap: 24rpx;
  padding: 24rpx 40rpx 40rpx;
  justify-content: center;
}

.recording-action-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.recording-action-btn::after {
  border: none;
}

.recording-action-btn.retry-btn {
  background-color: white;
  color: #4A90E2 !important;
  border: 2rpx solid #4A90E2;
}

.recording-action-btn.submit-btn {
  background-color: #4A90E2;
  color: white !important;
}

.recording-action-btn.continue-btn {
  background-color: #10b981;
  color: white;
}

.recording-action-btn.finish-btn {
  background-color: #1f2937;
  color: white;
}

/* 上传失败弹窗 */
.upload-failure-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-failure-modal {
  background-color: #f5f5f5;
  border-radius: 24rpx;
  width: 85%;
  max-width: 600rpx;
  margin: 32rpx;
  border: 2rpx solid #e5e7eb;
}

.upload-failure-header {
  padding: 32rpx 32rpx 16rpx;
  text-align: center;
  border-bottom: 2rpx solid #e5e7eb;
}

.upload-failure-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #ef4444;
}

.upload-failure-body {
  padding: 24rpx 32rpx;
  text-align: center;
}

.upload-failure-text {
  display: block;
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.upload-failure-detail {
  display: block;
  font-size: 24rpx;
  color: #9ca3af;
  background-color: #f5f5f5;
  padding: 12rpx;
  border-radius: 8rpx;
  margin-top: 16rpx;
  line-height: 1.3;
}

.upload-failure-actions {
  display: flex;
  gap: 16rpx;
  padding: 24rpx 32rpx 32rpx;
  justify-content: center;
}

.upload-action-btn {
  flex: 1;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  max-width: 150rpx;
}

.upload-action-btn.download-btn {
  background-color: #10b981;
  color: white;
}

.upload-action-btn.retry-btn {
  background-color: #1f2937;
  color: white;
}

/* 控制按钮确保高 z-index */
.top-controls {
  z-index: 10;
  pointer-events: auto;
}

.bottom-controls {
  z-index: 10;
  pointer-events: auto;
}

