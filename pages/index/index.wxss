/* pages/index/index.wxss */

.feature-list {
  padding: 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.ml-16 {
  margin-left: 16rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e5e7eb;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* Title indicator next to greeting */
.title-row {
  display: flex;
  align-items: center;
}

/* Map-pin icon built with CSS */
.pin-icon {
  position: absolute;
  left: -5rpx;     /* move 5rpx further left */
  top: 51.93rpx;   /* 267.31 - 215.38 within box */
  width: 30.77rpx; /* per design */
  height: 30.77rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2;
}

/* Upright pin: circular head + diamond tail */
.pin-shape {
  width: 20rpx;              /* head diameter */
  height: 20rpx;
  background-color: #2772F0; /* rgb(39,114,240) */
  border-radius: 50%;        /* perfect circle head */
  position: relative;
}

.pin-dot {
  position: absolute;
  width: 8rpx;
  height: 8rpx;
  background-color: #ffffff;
  border-radius: 50%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* center perfectly */
}

.pin-tail {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #2772F0;
  bottom: -5rpx;            /* overlap slightly under the head */
  left: 50%;
  transform: translateX(-50%) rotate(45deg);
  border-radius: 2rpx;      /* soft point */
}

.title-texts { }

.home-title { position: absolute; left: 26rpx; top: 46.16rpx; width: 359.62rpx; z-index: 2; }
.home-subtitle { position: absolute; left: 26rpx; top: 155.77rpx; width: 359.62rpx; z-index: 2; }

/* Home title tweaks to match design */
.home-title {
  font-size: 40rpx;   /* slightly larger than global */
  font-weight: 700;   /* heavier */
  color: #1f2a44;     /* deep navy tone */
  line-height: 1.3;
}

.template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.template-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
  align-items: center;
  transition: all 0.3s ease;
  border: 2rpx solid #e5e7eb;
}

.template-item:active {
  transform: scale(0.98);
  background-color: #f9fafb;
  border-color: #d1d5db;
}

.template-thumbnail {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f3f4f6;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
}

.template-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.template-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111827;
  margin-bottom: 4rpx;
}

.template-desc {
  font-size: 28rpx;
  line-height: 1.4;
}

.template-duration {
  margin-top: 4rpx;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-btn {
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  color: #111827;
  font-size: 28rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #f9fafb;
  border-color: #d1d5db;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 24rpx;
  color: #6b7280;
}
.card-flush { padding: 0; }
.greeting-box {
  position: relative;
  width: 673.08rpx;   /* per spec */
  height: 234.62rpx;  /* per spec */
  margin-left: 38.46rpx;
  border-radius: 15.38rpx;
  overflow: hidden;
}

/* Right-side illustration per design spec */
.greeting-illustration {
  position: absolute;
  top: 0;
  left: 302.92rpx; /* 5rpx further left */
  width: 321.15rpx;
  height: 234.62rpx;
  opacity: 1;
  pointer-events: none;
  z-index: 1;
}
