/* pages/index/index.wxss */

/* Ensure consistent page background */
page {
  background-color: #f5f5f5;
}

/* Header Styles */
.header {
  display: flex;
  align-items: center;
  padding: 120rpx 40rpx 80rpx;
  background-color: #f5f5f5;
  position: relative;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  width: 100%;
}

.feature-list {
  padding: 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.ml-16 {
  margin-left: 16rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e5e7eb;
}

/* Title indicator next to greeting */
.title-row {
  display: flex;
  align-items: center;
}

/* removed pin icon styles per request */

.title-texts { }

.home-title { position: absolute; left: 75rpx; top: 46.15rpx; width: 359.62rpx; z-index: 2; }
.home-subtitle { position: absolute; left: 75rpx; bottom: 46.15rpx; width: 359.62rpx; z-index: 2; }

/* Home title tweaks to match design */
.home-title {
  font-size: 40rpx;   /* slightly larger than global */
  font-weight: 700;   /* heavier */
  color: #1f2a44;     /* deep navy tone */
  line-height: 1.3;
}

.template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.template-item {
  display: flex;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  padding: 16rpx;
  align-items: center;
  transition: all 0.3s ease;
  border: 2rpx solid #e5e7eb;
}

.template-item:active {
  transform: scale(0.98);
  background-color: #f5f5f5;
  border-color: #d1d5db;
}

.template-thumbnail {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f3f4f6;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
}

.template-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.template-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111827;
  margin-bottom: 4rpx;
}

.template-desc {
  font-size: 28rpx;
  line-height: 1.4;
}

.template-duration {
  margin-top: 4rpx;
}
/* New grid cards for 全部模版 */
.tpl-grid {
  display: grid;
  grid-template-columns: 325rpx 325rpx; /* fixed card widths */
  column-gap: 0; /* space is handled by justify-content + padding */
  justify-content: space-between; /* push columns to edges */
  /* Container has 32rpx padding; to achieve 38.46rpx from phone edges, use 38.46-32 = 6.46rpx */
  padding-left: 6.46rpx;
  padding-right: 6.46rpx;
  row-gap: 24rpx;
  margin-top: 30rpx;
}

.tpl-card {
  background: #f5f5f5;
  border: 2rpx solid #e2e8f0;
  border-radius: 15.38rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  padding: 16rpx 16rpx 24rpx 16rpx; /* extra bottom padding to lift button */
  width: 325rpx;          /* fixed width */
  height: 417.31rpx;      /* fixed height */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;     /* enable absolute positioning for children */
}


.tpl-thumb {
  width: 100%;
  height: 180rpx; /* make media area smaller */
  border-radius: 12rpx;
  overflow: hidden;
  background: #f3f4f6;
}

.tpl-thumb-img { width: 100%; height: 100%; }

.tpl-thumb-placeholder {
  width: 100%;
  height: 100%;
  background: #e5e7eb;
}

.tpl-title {
  font-size: 28rpx;   /* use smaller size as default to fit 2 lines */
  font-weight: 700;
  color: #1f2a44;
  margin: 12rpx 0 6rpx 0;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2; /* clamp to two lines */
  overflow: hidden;
}
.tpl-title-sm { font-size: 28rpx; }
.tpl-title-xs { font-size: 24rpx; }

.tpl-meta {
  position: absolute;
  top: 280rpx;        /* fixed position from top of card */
  left: 16rpx;
  right: 16rpx;
  display: flex;
  gap: 12rpx;
  color: #9ca3af;
  font-size: 22rpx; /* smaller meta */
}
.meta-item { display: flex; align-items: center; gap: 6rpx; }
.meta-dot { display: inline-block; width: 6rpx; height: 6rpx; border-radius: 50%; background: #cbd5e1; }

.tpl-actions {
  position: absolute;
  bottom: 24rpx;      /* fixed position from bottom of card */
  left: 16rpx;
  right: 16rpx;
}
/* Match scene detail button dimensions via ext-class */
.block-btn { width: 100% !important; padding: 0 !important; height: 76rpx; font-size: 26rpx; }

/* Logout CTA button sizing and placement */
.logout-cta {
  width: 488.46rpx;
  height: 69.23rpx;
  margin: 50rpx auto 24rpx; /* 50rpx below templates, center horizontally */
  background: #f5f5f5;
  border: 2rpx solid #e2e8f0;
  border-radius: 15.38rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #1f2a44;
}


.action-btn {
  background-color: #f5f5f5;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  color: #111827;
  font-size: 28rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #f5f5f5;
  border-color: #d1d5db;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 24rpx;
  color: #6b7280;
}
.card-flush {
  padding: 0;
  background: transparent; /* let inner box own the visuals */
  box-shadow: none;
  border: none;
}
.greeting-box {
  position: relative;
  width: 673.08rpx;
  height: 234.62rpx;  /* per spec height */
  border-radius: 15.38rpx;
  overflow: hidden;
  background-color: #f5f5f5; /* match mini cards */
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); /* same shadow as mini cards */
  margin-left: 8rpx;
  border: 2rpx solid #e2e8f0; /* lighten border tone */
}

/* Right-side illustration per design spec */
.greeting-illustration {
  position: absolute;
  top: 0;
  left: 384.62rpx; /* keep relative layout */
  width: 326.92rpx;
  height: 234.62rpx;
  opacity: 1;
  pointer-events: none;
  z-index: 1;
}

/* Blue pin icon (image) inside greeting box */
.greeting-pin {
  position: absolute;
  left: 34.62rpx;   /* from left edge of the big box */
  top: 47.85rpx;    /* from top edge of the big box */
  width: 30.51rpx;
  height: 38.64rpx;
  z-index: 2;
  pointer-events: none;
}

/* title-icon removed per request */

/* Full-bleed card: cancel container side padding to reach phone edges */
.full-bleed { margin-left: -32rpx; margin-right: -32rpx; }

/* 全部模版 标题样式 */
.all-templates-link {
  display: block;
  /* Align 38.46rpx from phone left: container has 32rpx padding, so add 6.46rpx */
  margin-left: -20rpx;
  margin-top: 30rpx;
  font-size: 40rpx;    /* same as 您好 */
  font-weight: 700;
  color: #1f2a44;      /* match home title color */
}


