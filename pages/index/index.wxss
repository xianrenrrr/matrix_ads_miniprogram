/* pages/index/index.wxss */

.feature-list {
  padding: 0;
}

.feature-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
}

.ml-16 {
  margin-left: 16rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  border: 2rpx solid #e5e7eb;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #6b7280;
}

/* Title indicator next to greeting */
.title-row {
  display: flex;
  align-items: center;
}

/* removed pin icon styles per request */

.title-texts { }

.home-title { position: absolute; left: 75rpx; top: 46.15rpx; width: 359.62rpx; z-index: 2; }
.home-subtitle { position: absolute; left: 75rpx; bottom: 46.15rpx; width: 359.62rpx; z-index: 2; }

/* Home title tweaks to match design */
.home-title {
  font-size: 40rpx;   /* slightly larger than global */
  font-weight: 700;   /* heavier */
  color: #1f2a44;     /* deep navy tone */
  line-height: 1.3;
}

.template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.template-item {
  display: flex;
  background-color: #ffffff;
  border-radius: 12rpx;
  padding: 16rpx;
  align-items: center;
  transition: all 0.3s ease;
  border: 2rpx solid #e5e7eb;
}

.template-item:active {
  transform: scale(0.98);
  background-color: #f9fafb;
  border-color: #d1d5db;
}

.template-thumbnail {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f3f4f6;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.thumbnail-image {
  width: 100%;
  height: 100%;
}

.template-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.template-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #111827;
  margin-bottom: 4rpx;
}

.template-desc {
  font-size: 28rpx;
  line-height: 1.4;
}

.template-duration {
  margin-top: 4rpx;
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.action-btn {
  background-color: #ffffff;
  border: 2rpx solid #e5e7eb;
  border-radius: 12rpx;
  padding: 24rpx 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
  color: #111827;
  font-size: 28rpx;
}

.action-btn:active {
  transform: scale(0.95);
  background-color: #f9fafb;
  border-color: #d1d5db;
}

.action-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 24rpx;
  color: #6b7280;
}
.card-flush {
  padding: 0;
  background: transparent; /* let inner box own the visuals */
  box-shadow: none;
  border: none;
}
.greeting-box {
  position: relative;
  width: 673.08rpx;
  height: 234.62rpx;  /* per spec height */
  border-radius: 15.38rpx;
  overflow: hidden;
  background-color: #ffffff; /* match mini cards */
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06); /* same shadow as mini cards */
}

/* Right-side illustration per design spec */
.greeting-illustration {
  position: absolute;
  top: 0;
  left: 384.62rpx; /* keep relative layout */
  width: 326.92rpx;
  height: 234.62rpx;
  opacity: 1;
  pointer-events: none;
  z-index: 1;
}

/* Blue pin icon (image) inside greeting box */
.greeting-pin {
  position: absolute;
  left: 34.62rpx;   /* from left edge of the big box */
  top: 53.85rpx;    /* from top edge of the big box */
  width: 20.51rpx;
  height: 25.64rpx;
  z-index: 2;
  pointer-events: none;
}

/* title-icon removed per request */

/* Full-bleed card: cancel container side padding to reach phone edges */
.full-bleed { margin-left: -32rpx; margin-right: -32rpx; }

/* Three-box stats aligned to greeting box edges */
.stats-layer {
  display: grid;
  grid-template-columns: repeat(3, 220.46rpx);
  column-gap: 15.38rpx;
  justify-content: start;
  width: 100%;
  margin-top: 19rpx;
}

.mini-stat-card {
  position: relative;
  height: 203.85rpx; /* fixed height from design */
  background: #ffffff;
  border-radius: 15.38rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
}

/* Number box exact placement and sizing */
.stat-number-box {
  position: absolute;
  top: 30.77rpx;
  left: 30.77rpx;
  height: 80.77rpx;
  line-height: 80.77rpx;
}

.num-1w { width: 50rpx; }
.num-2w { width: 82.69rpx; }
.num-3w { width: 111.54rpx; }

/* Place the stat label without affecting card height */
.stats-layer .stat-label {
  position: absolute;
  left: 30.77rpx;
  top: 138.46rpx; /* directly under the number box */
  height: 23.08rpx;
  line-height: 23.08rpx;
  font-size: 23.08rpx;
  right: 16rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin: 0;
}

/* Stat icons: positioned from right and bottom inside each box */
.stat-icon {
  position: absolute;
  right: 30.77rpx;
  bottom: 42.31rpx;
  pointer-events: none;
}

.stat-icon-1 { width: 14.93rpx; height: 23.08rpx; }
.stat-icon-2 { width: 26.78rpx; height: 19.23rpx; }
.stat-icon-3 { width: 22.24rpx; height: 23.08rpx; }

/* Icon positioned relative to the entire phone (viewport) */
.page-icon {
  position: fixed;
  left: 75.31rpx;
  top: 90.31rpx;
  width: 30.77rpx;
  height:30.77rpx;
  pointer-events: none;
  z-index: 10000; /* ensure above greeting box and text */
}
