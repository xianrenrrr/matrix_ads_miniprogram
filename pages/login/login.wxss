/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 40rpx 32rpx 60rpx;
  display: flex;
  flex-direction: column;
}

/* 头部 Logo 区域 */
.header-section {
  text-align: center;
  margin-bottom: 80rpx;
  margin-top: 60rpx;
}

.logo-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.logo-icon {
  font-size: 64rpx;
  margin-right: 16rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: 700;
  color: #000000;
  letter-spacing: 2rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #374151;
  margin-top: 8rpx;
}

/* 登录方式切换 */
.login-method-tabs {
  display: flex;
  background-color: #f3f4f6;
  border-radius: 12rpx;
  padding: 8rpx;
  margin-bottom: 48rpx;
  border: 1rpx solid #e5e7eb;
}

.method-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.method-tab.active {
  background-color: #1f2937;
  color: white;
}

.method-tab:not(.active) {
  color: #6b7280;
}

.tab-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 表单容器 */
.form-container {
  flex: 1;
}

/* 密码登录表单 */
.password-login {
  width: 100%;
}

.form-group {
  margin-bottom: 32rpx;
}

.input-group {
  position: relative;
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 8rpx;
  border: 2rpx solid #d1d5db;
  transition: border-color 0.3s ease;
}

.input-group:focus-within {
  border-color: #6b7280;
}

.input-icon {
  font-size: 32rpx;
  padding: 0 24rpx;
  color: #6b7280;
}

.form-input {
  flex: 1;
  padding: 32rpx 16rpx 32rpx 0;
  font-size: 32rpx;
  color: #111827;
  background: transparent;
  border: none;
}

.input-placeholder {
  color: #9ca3af;
}

.password-toggle {
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #6b7280;
  cursor: pointer;
  transition: color 0.3s ease;
}

.password-toggle.active {
  color: #374151;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 48rpx;
}

.forgot-password {
  font-size: 28rpx;
  color: #6b7280;
  cursor: pointer;
}

.login-btn {
  width: 100%;
  background-color: #1f2937;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  transition: all 0.2s ease;
}

.login-btn:not(.loading):active {
  transform: scale(0.98);
  background-color: #111827;
}

.login-btn.loading {
  opacity: 0.7;
  cursor: not-allowed;
}

.loading-text {
  display: flex;
  align-items: center;
  justify-content: center;
}

.register-hint {
  text-align: center;
  margin-top: 24rpx;
}

.hint-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-right: 8rpx;
}

.register-link {
  font-size: 28rpx;
  color: #374151;
  cursor: pointer;
}

/* 二维码登录 */
.qrcode-login {
  width: 100%;
  text-align: center;
}

.qr-instruction {
  margin-bottom: 48rpx;
}

.instruction-icon {
  font-size: 80rpx;
  margin-bottom: 24rpx;
}

.instruction-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 32rpx;
}

.instruction-steps {
  text-align: left;
  max-width: 480rpx;
  margin: 0 auto;
}

.step-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 16rpx;
  background-color: #f9fafb;
  border-radius: 8rpx;
  border: 1rpx solid #e5e7eb;
}

.step-number {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  background-color: #1f2937;
  color: white;
  border-radius: 50%;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.step-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 1.4;
}

.qr-scan-area {
  margin: 48rpx auto;
  width: 300rpx;
  height: 300rpx;
  position: relative;
}

.scan-frame {
  width: 100%;
  height: 100%;
  position: relative;
  background-color: #f9fafb;
  border-radius: 12rpx;
  border: 2rpx solid #e5e7eb;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scan-corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #1f2937;
}

.scan-corner-tl {
  top: 16rpx;
  left: 16rpx;
  border-right: none;
  border-bottom: none;
  border-radius: 8rpx 0 0 0;
}

.scan-corner-tr {
  top: 16rpx;
  right: 16rpx;
  border-left: none;
  border-bottom: none;
  border-radius: 0 8rpx 0 0;
}

.scan-corner-bl {
  bottom: 16rpx;
  left: 16rpx;
  border-right: none;
  border-top: none;
  border-radius: 0 0 0 8rpx;
}

.scan-corner-br {
  bottom: 16rpx;
  right: 16rpx;
  border-left: none;
  border-top: none;
  border-radius: 0 0 8rpx 0;
}

.scan-hint {
  font-size: 28rpx;
  color: #6b7280;
  text-align: center;
}

.scan-btn {
  width: 100%;
  background-color: #059669;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 32rpx;
  transition: all 0.2s ease;
}

.scan-btn:not(.loading):active {
  transform: scale(0.98);
  background-color: #047857;
}

.scan-btn.loading {
  opacity: 0.7;
  cursor: not-allowed;
}

.qr-tips {
  background-color: #fef3c7;
  border: 2rpx solid #f59e0b;
  border-radius: 8rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #92400e;
}

/* 帮助和底部 */
.help-section {
  text-align: center;
  margin: 48rpx 0 32rpx;
}

.help-btn {
  font-size: 28rpx;
  color: #6b7280;
  cursor: pointer;
  transition: color 0.3s ease;
}

.help-btn:active {
  color: #374151;
}

.footer-section {
  text-align: center;
  margin-top: auto;
  padding-top: 32rpx;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #6b7280;
  margin-bottom: 8rpx;
}

.version-text {
  font-size: 22rpx;
  color: #9ca3af;
}

/* 通用按钮样式 */
.primary-btn {
  background: #1f2937;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.primary-btn:not([disabled]):active {
  transform: translateY(1rpx);
  background: #111827;
  box-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.1);
}