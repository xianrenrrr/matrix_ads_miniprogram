/* pages/phone-login/phone-login.wxss */

/* Ensure consistent page background */
page {
  background-color: #f5f5f5;
}

.phone-login-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* 头部 */
.header {
  display: flex;
  align-items: center;
  padding: 120rpx 40rpx 80rpx;
  background-color: #f5f5f5;
  position: relative;
}

.back-btn {
  position: absolute;
  left: 40rpx;
  top: 120rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.back-btn:active {
  background-color: #f0f0f0;
}

.back-icon {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  width: 100%;
}

/* 页面标题 */
.page-title {
  padding: 60rpx 40rpx 80rpx;
  background-color: #f5f5f5;
}

.title-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
}

/* 表单容器 */
.form-container {
  flex: 1;
  padding: 0 40rpx;
}

/* 输入框容器 */
.input-container {
  margin-bottom: 40rpx;
}

.phone-input,
.password-input {
  width: 100%;
  height: 100rpx;
  background-color: #f5f5f5;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #333;
  box-sizing: border-box;
}

.phone-input::placeholder,
.password-input::placeholder {
  color: #999;
}

/* 用户协议 */
.agreement-section {
  margin: 60rpx 0 80rpx 0;
}

.checkbox-container {
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.checkbox-area {
  display: flex;
  align-items: center;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid #4A90E2;
  border-radius: 50%;
  margin-right: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: white;
}

.checkbox.checked {
  background-color: #4A90E2;
}

.check-icon {
  color: white;
  font-size: 20rpx;
  font-weight: bold;
}

.agreement-text {
  font-size: 28rpx;
  color: #333;
  margin-right: 8rpx;
}

.agreement-link {
  color: #4A90E2;
  font-size: 28rpx;
}

/* 确定按钮 */
.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #4A90E2;
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 40rpx;
}

.submit-btn:active {
  opacity: 0.8;
}

.submit-btn.loading {
  opacity: 0.6;
}

.submit-btn[disabled] {
  background-color: #ccc;
  color: #999;
}

/* 用户协议弹窗 */
.agreement-modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
}

.agreement-modal {
  background-color: white;
  border-radius: 20rpx;
  width: 100%;
  max-width: 600rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  margin: auto;
  position: relative;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #f5f5f5;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.modal-close:active {
  background-color: #f0f0f0;
}

.modal-content {
  flex: 1;
  padding: 0;
  max-height: 60vh;
}

.agreement-content {
  padding: 40rpx;
  line-height: 1.6;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin: 40rpx 0 20rpx 0;
}

.section-title:first-child {
  margin-top: 0;
}

.section-text {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin: 40rpx 0 8rpx 0;
}

.modal-footer {
  padding: 24rpx 40rpx 40rpx;
  border-top: 1rpx solid #e5e5e5;
  background-color: #f5f5f5;
}

.agree-btn {
  width: 100%;
  background-color: #4A90E2;
  color: white;
  border: none;
  border-radius: 12rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 500;
}