/* pages/scene-submission/scene-submission.wxss */

.scene-submission-container {
  min-height: 100vh;
  background: #f5f5f5;
  display: flex;
  flex-direction: column;
}

/* Header Styles */
.header {
  background: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  height: 100rpx;
}

.back-button, .progress-button {
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f8f9fa;
}

.icon-back {
  font-size: 48rpx;
  color: #333;
  font-weight: bold;
}

.icon-progress {
  font-size: 32rpx;
}

.header-info {
  flex: 1;
  text-align: center;
  margin: 0 20rpx;
}

.template-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.scene-indicator {
  font-size: 24rpx;
  color: #666;
}

/* Scene Navigation */
.scene-nav {
  background: #ffffff;
  border-bottom: 1px solid #e5e5e5;
  padding: 20rpx 0;
}

.scene-nav-scroll {
  white-space: nowrap;
}

.scene-nav-content {
  display: flex;
  padding: 0 30rpx;
  gap: 20rpx;
}

.scene-nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 120rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: #f8f9fa;
  transition: all 0.3s ease;
}

.scene-nav-item.active {
  background: #e3f2fd;
  border: 2px solid #2196f3;
}

.scene-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: #9ca3af;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.scene-title {
  font-size: 20rpx;
  color: #333;
  text-align: center;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.status-text {
  font-size: 18rpx;
  color: #666;
  text-transform: capitalize;
}

/* Main Content */
.main-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* Instructions Section */
.instructions-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.instructions-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  cursor: pointer;
}

.instructions-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.toggle-icon {
  font-size: 24rpx;
  color: #666;
}

.instructions-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.instruction-row {
  display: flex;
  gap: 20rpx;
}

.instruction-item {
  flex: 1;
}

.instruction-label {
  font-size: 22rpx;
  color: #666;
  font-weight: 500;
  display: block;
  margin-bottom: 8rpx;
}

.instruction-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
}

/* Camera Section */
.camera-section {
  flex: 1;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.camera-container {
  position: relative;
  width: 100%;
  height: 600rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.camera-preview {
  width: 100%;
  height: 100%;
}

/* Grid Overlay */
.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(3, 1fr);
  pointer-events: none;
  z-index: 10;
}

.grid-cell {
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.grid-cell.highlighted {
  background: rgba(33, 150, 243, 0.2);
  border: 2rpx solid #2196f3;
}

/* Recording Indicator */
.recording-indicator {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  display: flex;
  align-items: center;
  background: rgba(244, 67, 54, 0.9);
  color: white;
  padding: 12rpx 20rpx;
  border-radius: 20rpx;
  z-index: 20;
}

.recording-dot {
  width: 16rpx;
  height: 16rpx;
  background: #ffffff;
  border-radius: 50%;
  margin-right: 12rpx;
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.5; }
}

.recording-text {
  font-size: 24rpx;
  font-weight: 600;
}

/* Camera Controls */
.camera-controls {
  position: absolute;
  bottom: 30rpx;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 60rpx;
}

.control-button {
  width: 80rpx;
  height: 80rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-icon {
  font-size: 32rpx;
  color: white;
}

.record-button-container {
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-button {
  width: 120rpx;
  height: 120rpx;
  border: 6rpx solid white;
  border-radius: 50%;
  background: #f44336;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.record-button.recording {
  background: #ffffff;
  animation: recording-pulse 1s infinite;
}

@keyframes recording-pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.record-button-inner {
  width: 40rpx;
  height: 40rpx;
  background: white;
  border-radius: 50%;
}

.record-button.recording .record-button-inner {
  background: #f44336;
  border-radius: 8rpx;
}

/* Upload Section */
.upload-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.upload-progress {
  text-align: center;
}

.upload-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background: #e5e5e5;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #2196f3, #21cbf3);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

/* Submission Status */
.submission-status {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
}

.status-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.status-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.status-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  text-transform: capitalize;
}

.status-approved {
  background: #e8f5e8;
  color: #2e7d32;
}

.status-pending {
  background: #fff3e0;
  color: #f57c00;
}

.status-rejected {
  background: #ffebee;
  color: #c62828;
}

.rejection-feedback, .approval-info, .pending-info {
  padding: 20rpx;
  border-radius: 12rpx;
  margin-top: 12rpx;
}

.rejection-feedback {
  background: #ffebee;
}

.approval-info {
  background: #e8f5e8;
}

.pending-info {
  background: #fff3e0;
}

.feedback-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #c62828;
  margin-bottom: 12rpx;
  display: block;
}

.feedback-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.approval-text, .pending-text {
  font-size: 26rpx;
  font-weight: 500;
}

.approval-text {
  color: #2e7d32;
}

.pending-text {
  color: #f57c00;
}

/* AI Feedback Modal */
.feedback-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 40rpx;
}

.feedback-content {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  max-width: 600rpx;
  width: 100%;
  max-height: 80vh;
  overflow-y: auto;
}

.feedback-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.feedback-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.close-button {
  font-size: 40rpx;
  color: #666;
  cursor: pointer;
}

.feedback-score {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.score-label {
  font-size: 28rpx;
  color: #333;
}

.score-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #2196f3;
}

.feedback-suggestions {
  margin-bottom: 30rpx;
}

.suggestions-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
}

.suggestion-item {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.feedback-actions {
  text-align: center;
}

.feedback-button {
  background: #2196f3;
  color: white;
  border: none;
  padding: 24rpx 60rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
}