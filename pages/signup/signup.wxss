/* pages/signup/signup.wxss */
.signup-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 0;
  box-sizing: border-box;
}

/* 头部区域 */
.header-section {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
}

.logo-container {
  margin-bottom: 20rpx;
}

.logo-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 300;
}

/* 邀请信息 */
.invite-info {
  margin: 0 40rpx 40rpx;
}

.invite-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.invite-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 20rpx;
}

.invite-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.detail-item {
  font-size: 28rpx;
  color: #666;
  padding: 8rpx 0;
}

/* 表单容器 */
.form-container {
  margin: 0 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.input-group {
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
}

.input-icon {
  font-size: 36rpx;
  margin-right: 20rpx;
  width: 40rpx;
  text-align: center;
}

.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #999;
  font-size: 30rpx;
}

.password-toggle {
  font-size: 32rpx;
  color: #999;
  padding: 10rpx;
  margin-left: 10rpx;
  cursor: pointer;
  transition: color 0.3s ease;
}

.password-toggle.active {
  color: #667eea;
}

/* 注册按钮 */
.signup-btn {
  width: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: bold;
  margin: 40rpx 0;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.4);
  transition: all 0.3s ease;
}

.signup-btn:not([disabled]):active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.signup-btn[disabled] {
  opacity: 0.7;
  transform: none;
}

.loading-text {
  color: rgba(255, 255, 255, 0.9);
}

/* 注册说明 */
.signup-notes {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  backdrop-filter: blur(10rpx);
}

.note-text {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.note-text:last-child {
  margin-bottom: 0;
}

/* 底部操作 */
.footer-actions {
  text-align: center;
  padding: 40rpx;
}

.back-btn {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.8);
  text-decoration: underline;
  cursor: pointer;
  transition: color 0.3s ease;
}

.back-btn:active {
  color: white;
}

/* 选择器样式 */
.selector-group {
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  cursor: pointer;
  transition: all 0.3s ease;
}

.selector-group:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.15);
}

.selector-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.selector-text {
  font-size: 32rpx;
  color: #333;
}

.selector-text.placeholder {
  color: #999;
  font-size: 30rpx;
}

.selector-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  transition: transform 0.3s ease;
}

.selector-group:active .selector-arrow {
  transform: rotate(180deg);
}

.hidden-picker {
  position: absolute;
  left: -9999rpx;
  top: -9999rpx;
  opacity: 0;
  pointer-events: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header-section {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .form-container,
  .invite-info {
    margin: 0 30rpx;
  }
  
  .logo-icon {
    font-size: 60rpx;
  }
  
  .logo-text {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
}