/* pages/signup/signup.wxss */
.signup-container {
  min-height: 100vh;
  background: #ffffff;
  padding: 0;
  box-sizing: border-box;
}

/* 头部区域 */
.header-section {
  text-align: center;
  padding: 60rpx 40rpx 40rpx;
  background: #ffffff;
}

.logo-container {
  margin-bottom: 20rpx;
}

.logo-icon {
  font-size: 80rpx;
  display: block;
  margin-bottom: 20rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #000000;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 32rpx;
  color: #374151;
  font-weight: 400;
}

/* 邀请信息 */
.invite-info {
  margin: 0 40rpx 40rpx;
}

.invite-card {
  background: #ffffff;
  border-radius: 12rpx;
  padding: 30rpx;
  border: 2rpx solid #e5e7eb;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
}

.invite-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #000000;
  display: block;
  margin-bottom: 20rpx;
}

.invite-details {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.detail-item {
  font-size: 28rpx;
  color: #374151;
  padding: 8rpx 0;
}

/* 表单容器 */
.form-container {
  margin: 0 40rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.input-group {
  position: relative;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border: 2rpx solid #d1d5db;
  transition: border-color 0.2s ease;
}

.input-group:focus-within {
  border-color: #6b7280;
}


.form-input {
  flex: 1;
  font-size: 32rpx;
  color: #111827;
  background: transparent;
  border: none;
  outline: none;
}

.input-placeholder {
  color: #9ca3af;
  font-size: 30rpx;
}

.password-toggle {
  font-size: 32rpx;
  color: #6b7280;
  padding: 10rpx;
  margin-left: 10rpx;
  cursor: pointer;
  transition: color 0.3s ease;
}

.password-toggle.active {
  color: #374151;
}

/* 注册按钮 */
.signup-btn {
  width: 100%;
  background: #1f2937;
  color: white;
  border: none;
  border-radius: 8rpx;
  padding: 32rpx;
  font-size: 36rpx;
  font-weight: 600;
  margin: 40rpx 0;
  box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1);
  transition: all 0.2s ease;
}

.signup-btn:not([disabled]):active {
  background: #111827;
  transform: translateY(1rpx);
}

.signup-btn[disabled] {
  background: #f3f4f6;
  color: #9ca3af;
  cursor: not-allowed;
}

.loading-text {
  color: rgba(255, 255, 255, 0.9);
}

/* 注册说明 */
.signup-notes {
  background: #f9fafb;
  border-radius: 8rpx;
  padding: 30rpx;
  margin: 30rpx 0;
  border: 1rpx solid #e5e7eb;
}

.note-text {
  display: block;
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.note-text:last-child {
  margin-bottom: 0;
}

/* 底部操作 */
.footer-actions {
  text-align: center;
  padding: 40rpx;
  background: #ffffff;
}

.back-btn {
  font-size: 30rpx;
  color: #6b7280;
  text-decoration: underline;
  cursor: pointer;
  transition: color 0.3s ease;
}

.back-btn:active {
  color: #374151;
}

/* 选择器样式 */
.selector-group {
  position: relative;
  background: #ffffff;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  border: 2rpx solid #d1d5db;
  cursor: pointer;
  transition: all 0.2s ease;
}

.selector-group:active {
  border-color: #6b7280;
  transform: scale(0.98);
}


.selector-text {
  font-size: 32rpx;
  color: #111827;
}

.selector-text.placeholder {
  color: #9ca3af;
  font-size: 30rpx;
}

.selector-arrow {
  font-size: 24rpx;
  color: #6b7280;
  margin-left: 20rpx;
  transition: transform 0.3s ease;
}

.selector-group:active .selector-arrow {
  transform: rotate(180deg);
}

.hidden-picker {
  position: absolute;
  left: -9999rpx;
  top: -9999rpx;
  opacity: 0;
  pointer-events: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header-section {
    padding: 40rpx 30rpx 30rpx;
  }
  
  .form-container,
  .invite-info {
    margin: 0 30rpx;
  }
  
  .logo-icon {
    font-size: 60rpx;
  }
  
  .logo-text {
    font-size: 40rpx;
  }
  
  .subtitle {
    font-size: 28rpx;
  }
}