/* pages/suggestions/suggestions.wxss */
.suggestions-container {
  padding: 20rpx;
  background-color: #0f172a;
  min-height: 100vh;
}

/* 模板头部信息 */
.template-header {
  background: linear-gradient(135deg, #1e293b, #334155);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.template-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.template-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
}

.template-desc {
  font-size: 28rpx;
  color: #94a3b8;
}

.template-stats {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.stat-item {
  font-size: 24rpx;
  color: #3b82f6;
  background-color: rgba(59, 130, 246, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
}

.stat-divider {
  color: #64748b;
}

/* 说明文字 */
.instructions {
  background-color: #1e293b;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.instruction-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.instruction-desc {
  font-size: 28rpx;
  color: #94a3b8;
}

/* 9宫格布局 */
.suggestions-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.suggestion-card {
  position: relative;
  background-color: #1e293b;
  border: 2rpx solid #334155;
  border-radius: 16rpx;
  padding: 20rpx 16rpx;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  transition: all 0.3s ease;
}

.suggestion-card.selected {
  background-color: #1e40af;
  border-color: #3b82f6;
  transform: scale(0.95);
}

.grid-number {
  position: absolute;
  top: 8rpx;
  left: 12rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #374151;
  color: #9ca3af;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 20rpx;
  font-weight: bold;
}

.selected-indicator {
  position: absolute;
  top: 8rpx;
  right: 12rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: #10b981;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.check-icon {
  color: #ffffff;
  font-size: 20rpx;
  font-weight: bold;
}

.suggestion-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  flex: 1;
}

.suggestion-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.suggestion-title {
  font-size: 24rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  line-height: 1.3;
}

.suggestion-desc {
  font-size: 20rpx;
  color: #94a3b8;
  text-align: center;
  line-height: 1.2;
}

.duration-badge {
  position: absolute;
  bottom: 8rpx;
  right: 12rpx;
  background-color: #059669;
  color: #ffffff;
  font-size: 18rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
}

/* 选择信息 */
.selection-info {
  background-color: #1e293b;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 24rpx;
  text-align: center;
}

.selection-text {
  display: block;
  font-size: 28rpx;
  color: #3b82f6;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.estimated-time {
  font-size: 24rpx;
  color: #94a3b8;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.action-btn {
  padding: 24rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
}

.primary-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: #ffffff;
}

.secondary-btn {
  background-color: #374151;
  color: #ffffff;
  border: 2rpx solid #4b5563;
}

.text-btn {
  background-color: transparent;
  color: #94a3b8;
  border: 2rpx solid #374151;
}

/* 使用提示 */
.usage-tips {
  background-color: #1e293b;
  border-radius: 12rpx;
  padding: 20rpx;
}

.tip-title {
  display: block;
  font-size: 28rpx;
  font-weight: bold;
  color: #fbbf24;
  margin-bottom: 12rpx;
}

.tip-item {
  display: block;
  font-size: 24rpx;
  color: #94a3b8;
  margin-bottom: 8rpx;
  padding-left: 16rpx;
}